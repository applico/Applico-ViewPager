<?xml version="1.0" encoding="utf-8"?>
<!-- This layout centers the fragment in the container, it has the parent view group and a little space around it-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@android:color/background_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:background="@android:color/white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <RelativeLayout android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="256dp"
            android:layout_marginLeft="256dp" />

        <ImageButton
            android:id="@+id/catBtnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:clickable="true"
            android:onClick="arrowButton"
            android:src="@drawable/arrow_right" />

        <ImageButton
            android:id="@+id/catBtnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:clickable="true"
            android:onClick="arrowButton"
            android:src="@drawable/arrow_left" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@android:color/background_light"/>

</LinearLayout>

